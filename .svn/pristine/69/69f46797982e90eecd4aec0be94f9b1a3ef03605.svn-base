#import <Foundation/Foundation.h>
#import "EspInternalProtocol.h"
#import "EspOsc.h"
#import "EspClock.h"
#import "EspKeyValueController.h"

@interface EspBeat : NSObject <EspHandleOsc>
{
    NSThread* beatThread;
    NSTimer* timer;
    
    // parameters of next scheduled beat
    // these should not be changed outside of beatThread
    EspTimeType nextGridTime, nextMachineTime, nextMargin;
    unsigned short int nextN,nextL;
    double nextD;
    unsigned long nextIndex; // every time an event is scheduled it receives a unique private index 
    
    unsigned long beatsIssued;
    
    unsigned short lastN; // no algorithm use, just debugging
    
    EspOsc* osc;
    EspInternalProtocol* udp;
    EspClock* clock;
    EspKeyValueController* kvc;
    NSNumber* on;
    NSNumber* tempo;
    NSNumber* downbeatTime;
    NSNumber* downbeatNumber;
    NSNumber* cycleLength;
    NSNumber* tempNumber;
}
@property (nonatomic,assign) EspOsc* osc;
@property (nonatomic,assign) EspInternalProtocol* udp;
@property (nonatomic,assign) EspClock* clock;
@property (nonatomic,assign) EspKeyValueController* kvc;
@property (retain) NSNumber* on;
@property (retain) NSNumber* tempo;
@property (retain) NSNumber* downbeatTime;
@property (retain) NSNumber* downbeatNumber;
@property (retain) NSNumber* cycleLength;
@property (retain) NSNumber* tempNumber;


-(void) turnBeatOn;
-(void) turnBeatOff;
-(void) changeBeatState:(BOOL)newState;
-(void) changeTempo:(double)newBpm;
-(void) changeCycleLength:(int)newLength;
			      
-(void)calculateNextBeat;
@end
